/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transition all 0.5s
  transform translateX(-120%) rotate(1000deg)
  max-height 0
  padding 0 !important
  &.order-enter-active
    transform translateX(0) rotate(0)
    max-height 60px
    padding 2rem 0 !important

.order-leave
  transition all 0.5s
  transform translateX(0)
  max-height 60
  padding 2rem 0 !important
  &.order-leave-active
    transform translateX(120%)
    max-height 0px
    padding 0 !important

.count-enter
  transition all .25s
  transform translateY(100%) // start off screen
  &.count-enter-active
    transform translateY(0)

.count-leave
  transition all .25s
  position absolute
  left 0
  bottom 0
  transform translateY(0) // start off screen
  &.count-leave-active
    transform translateY(-100%)